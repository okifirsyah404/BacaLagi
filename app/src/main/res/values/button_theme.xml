<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BacaLagi.FilledButtonTheme" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">@color/primary_40</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.BacaLagi.OutlinedButtonTheme" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.BacaLagi.OutlinedButtonTheme.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:backgroundTint">@color/color_group_button</item>
    </style>
</resources>